{
  "compilerOptions": {
    "baseUrl": "./src",
    "sourceMap": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext", "dom"],
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  }
}
